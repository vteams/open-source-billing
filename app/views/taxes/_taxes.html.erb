
        <div class="col s12 m6 l4">
          <%= link_to '', taxis , remote: true, class: 'invoice_show_link', style: 'display: none' %>

          <div class="card-white-panel invoice-card" data-taxis_id= <%=taxis.id %>>
            <div class="checkbox-item">
              <%= check_box_tag "tax_ids[]", taxis.id, false, :id => "tax_#{taxis.id}", class: "filled-in" %>
              <label for="<%= "tax_#{taxis.id}" %>"></label>
              <div class="invoice-name green-light"><%= taxis.name[0] %></div>
            </div>
            <div class="invoice-details">
              <h5><%= taxis.name%></h5>
              <strong><%= taxis.percentage %>%</strong>
            </div>
            <div class="action-btn-group">
              <% if @status.eql?('deleted') %>
                  <a href="javascript:;" class="single_recover_deleted" title="Recover"><i class="material-icons">unarchive</i></a>
              <% else %>
                  <%= link_to raw("<i class='material-icons'>delete</i>"),taxis, method: :delete, data:{confirm: 'Are you sure?' } %>
                  <%= link_to raw("<i class='material-icons'>create</i>"),edit_tax_path(taxis), remote: true, class: 'edit_invoice_icon' %>

                  <a id="dLabel" class='dropdown-button' href='#' data-activates='dropdown_<%= taxis.id %>' data-alignment="right" data-beloworigin="true">
                    <i class="material-icons">more_vert</i>
                  </a>
                  <!-- Dropdown Structure -->
                  <ul id="dropdown_<%= taxis.id %>" class='dropdown-content z-depth-4'>
                    <% if @status.eql?('active') %>
                        <li><a href="javascript:;" class="single_archive"><i class="material-icons">archive</i> Send to Archive</a></li>
                    <% elsif @status.eql?('archived') %>
                        <li><a href="javascript:;" class="single_recover"><i class="material-icons">unarchive</i> Recover </a></li>
                    <% end %>
                  </ul>
              <% end %>




            </div>
          </div>
        </div>

