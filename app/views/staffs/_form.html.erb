<div class="task">
  <%= form_for @staff, :html => { :multipart => true,class: 'staff_form form-horizontal',:id => 'newStaff'} do |f| %>
      <div class="content_middle form">
        <div class="fields_content">
          <div class="fields_content_container">
            <% if @staff.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h2>
                  <ul>
                    <% @staff.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="fields_content_data">

              <div class="field_row">
                <div class="label_field left single"><span><%= t('views.staffs.name') %></span></div>
                <div class="medium_field">
                  <%= f.text_field :name  %>
                </div>
              </div>
              <!--field_row-->

              <div class="field_row">
                <div class="label_field left single"><span><%= t('views.staffs.email') %></span></div>
                <div class="medium_field">
                  <%= f.text_field :email %>
                </div>
              </div>
              <!--field_row-->

              <div class="field_row">
                <div class="label_field left single"><%= t('views.staffs.rate') %></div>
                <div class="small_field"><%= f.number_field :rate, min: 0, step: 'any' %></div>
              </div>
              <!--field_row-->

              <%= render partial: 'user_registration_fields', locals: {f: f } if @staff.new_record? %>

              <div class="options_row clients">
                <div class="label_field left single options template"><%= t('views.staffs.make_this_staff_available_to') %>:</div>
                <div class="options_content">
                  <%= associate_account(controller_name, action_name, @staff) %>
                </div>
              </div>
            </div>
            <!--fields_content_data-->
          </div>
          <!--fields_content_container-->
        </div>
        <!--fields_content-->
      </div>
      <!--content_middle-->

      <div class="content_bottom">
        <%= f.submit :class => "btn_large submit staff-submit-btn" %>
        <%= link_to t("views.common.cancel"), staffs_path, :class => 'btn_large grey' %>
      </div>
  <% end %>
</div><!--staffs-->