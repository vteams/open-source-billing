$('table.table_listing tbody,table.table_listing tfoot', $('.report_content')).fadeOut('slow', function () {
    $('.report_content').html("<%= escape_javascript render("reports/report_partials/#{@report.report_name}")%>").find('table.table_listing tbody').fadeIn(9000);
    $(".reports table.table_listing:not(.aged_accounts_listing, .client_report_listing, .item_sales_listing)").tablesorter();

    $(".aged_accounts_listing, .client_report_listing, .item_sales_listing").tablesorter({
        textExtraction: function(node) {
            return node.getAttribute('data-sort_val');
        }
    });
    $("table.table_listing").trigger('update');
    $(".text-overflow-class").ellipsis({row:2})
});


