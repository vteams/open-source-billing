<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item breadcrum-bar">
      <div class="card-white-panel intro invoices-index-false-intro" data-intro='All of your invoices will be listed here' data-step="1">
        <h3 class="with-grid-icons">
          <span><%= link_to t('header.links.reports.reports'), reports_path %> </span>
        </h3>
      </div>

    </div>
  </div>
  <section class="invoice_expense_reports">
    <h2>Invoice and Sales Reports</h2>
    <div class="marginTop--half marginBottom--1 tiles-container">
      <div class="reportTile-container">
        <%= link_to(invoice_detail_reports_path, class: 'reportTile-content js-view-invoice-details ember-view') do %>
          <div class="ember-view">
            <div class="reportTile-skewer paddingY--quarter">
              <div class="paddingRight--1 textAlign--center report_img">
                <i class="material-icons">receipt</i>
              </div>
              <div>
                <span class="js-report-tile-name">Invoice Details</span>
                <div class="reportTile-description js-report-tile-description">A detailed summary of all invoices you've sent over a period of time</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="reportTile-container">
        <%= link_to(yearly_invoice_detail_reports_path, class: 'reportTile-content js-view-invoice-details ember-view') do %>
          <div class="ember-view">
            <div class="reportTile-skewer paddingY--quarter">
              <div class="paddingRight--1 textAlign--center report_img">
                <i class="material-icons">receipt</i>
              </div>
              <div>
                <span class="js-report-tile-name">Yearly Invoice Details</span>
                <div class="reportTile-description js-report-tile-description">A detailed summary of all invoices you've sent over a period of time</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="reportTile-container">
        <%= link_to(item_sales_reports_path, class: 'reportTile-content js-view-invoice-details ember-view') do %>
          <div class="ember-view">
            <div class="reportTile-skewer paddingY--quarter">
              <div class="paddingRight--1 textAlign--center report_img">
                <i class="material-icons">list</i>
              </div>
              <div>
                <span class="js-report-tile-name">Item Sales</span>
                <div class="reportTile-description js-report-tile-description">See how much money you are making from each item you sell to your clients</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="reportTile-container">
        <%= link_to(revenue_by_client_reports_path, class: 'reportTile-content js-view-invoice-details ember-view') do %>
          <div class="ember-view">
            <div class="reportTile-skewer paddingY--quarter">
              <div class="paddingRight--1 textAlign--center report_img">
                <i class="material-icons">calculate</i>
              </div>
              <div>
                <span class="js-report-tile-name">Revenue By Client</span>
                <div class="reportTile-description js-report-tile-description">A detailed summary of revenue generated by each client over a period of time</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <h2>Payments Reports</h2>
    <div class="marginTop--half marginBottom--1 tiles-container">
      <div class="reportTile-container">
        <%= link_to(payments_collected_reports_path, class: 'reportTile-content js-view-invoice-details ember-view') do %>
          <div class="ember-view">
            <div class="reportTile-skewer paddingY--quarter">
              <div class="paddingRight--1 textAlign--center report_img">
                <i class="material-icons">payment</i>
              </div>
              <div>
                <span class="js-report-tile-name">Payments Collected</span>
                <div class="reportTile-description js-report-tile-description">A detailed summary of all payments collected over a period of time</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="reportTile-container">
        <%= link_to(aged_accounts_receivable_reports_path, class: 'reportTile-content js-view-invoice-details ember-view') do %>
          <div class="ember-view">
            <div class="reportTile-skewer paddingY--quarter">
              <div class="paddingRight--1 textAlign--center report_img">
                <i class="material-icons">account_balance_wallet</i>
              </div>
              <div>
                <span class="js-report-tile-name">Aged Accounts Receivable</span>
                <div class="reportTile-description js-report-tile-description">A detailed summary of outstanding amount against unpaid and/or partially paid invoices for each client</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

</div>
