<tr class="fields">
  <td class="align_center">
    <div class="action_links">
      <%= f.hidden_field :_destroy%>
      <a data-association="project_tasks" class="remove_task remove_nested_fields" href="javascript:void(0)" title=" Delete this task"></a>
      <a class="sort_icon" href="javascript:" title="Drag this task to your desired location in this project"></a>
    </div>
  </td>
  <td class="align_center">
    <%= f.select :task_id, options_for_select(load_tasks_for_project(action_name, @project.company_id, f.object), selected: f.object.task_id),  {:prompt => "",:include_blank => ""}, {"data-placeholder" => t('views.projects.select_a_task'), :class => "tasks_list medium chzn-select grid_large_medium task_id", "data-form-container" => "tasks_holder", "data-dropdown-width" => "300", :required => ""} %>
  </td>

  <%= f.hidden_field :name, :class => 'task_name' %>
  <td class="align_center">
    <%= f.text_area :description, :class => 'grid_large description', readonly: true %>
  </td>
  <td class="align_center">
    <%= f.number_field :rate, min: 0, :class => 'grid_small align_right rate project_tasks_rate_field', readonly: true %>
  </td>
</tr>