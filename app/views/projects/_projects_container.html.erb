<% if @projects %>
    <% @projects.group_by { |d| d.group_date }.each do |date, projects| %>
        <p><span class="activity-date"><%= date %></span></p>
        <div class="flex-wrapper">
          <%= render partial: 'project_card', collection: projects, as: :project %>
        </div>
    <% end %>
    <%= page_entries_info @projects %>
    <%= paginate @projects %>
<% else %>
    <%= raw(t('helpers.page_entries_info.one_page.display_entries', count: 0)) %>
<% end %>