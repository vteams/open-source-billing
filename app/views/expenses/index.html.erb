<%= render 'expense_activity'%>

<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="row">
    <!--- breadcrum Bar --->
    <div class="col s12 breadcrum-bar">
      <div class="card-white-panel ">
        <h3>
          Expenses
          <%= link_to "/ #{@status.humanize}",expenses_url(status: @status) %>
        </h3>
      </div>
    </div>
    <div class="invoice-box expense-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
      <%= form_tag bulk_actions_expenses_path, {method: :get, id: "bulk_action_form"} do -%>
          <div class="search_result_container">
            <% @expenses.group_by { |d| d.group_date }.each do |date, expenses| %>
                <p><span class="activity-date"><%= date %></span></p>
                <div class="clearfix">
                  <%= render partial: 'expense_card', collection: expenses, as: :expense %>
                </div>
            <% end %>
          </div>
          <%= render partial: 'bulk_actions'%>

      <% end %>

    </div>
  </div>
</div>
