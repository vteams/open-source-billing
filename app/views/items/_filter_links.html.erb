<div class="grid_control_right">
  <ul>
    <li class="grid_control_sep sep_right">
      <%= link_to "Active", "items/filter_items?status=active&per=#{session["#{controller_name}-per_page"]}", :remote => true, :class => "get_actives active" %>
      <span class="item_counts" id="actives">(<%= Item.unarchived.size %>)</span>
    </li>
    <li class="grid_control_sep sep_right">
      <%= link_to "Archived", "items/filter_items?status=archived&per=#{session["#{controller_name}-per_page"]}", :remote => true, :class => "get_archived" %>
      <span class="item_counts" id="archives">(<%= Item.archived.size %>)</span>
    </li>
    <li>
      <%= link_to "Deleted", "items/filter_items?status=deleted&per=#{session["#{controller_name}-per_page"]}", :remote => true, :class => "get_deleted" %>
      <span class="item_counts" id="deletes">(<%= Item.only_deleted.size %>)</span>
    </li>
  </ul>
</div>

