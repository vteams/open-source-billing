<%= render 'client_activity'%>

<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item breadcrum-bar">
      <div class="card-white-panel ">
        <h3>
          Clients
          <%= link_to "/ #{@status.humanize}",clients_url(status: @status) %>
        </h3>
      </div>
    </div>
  </div>
  <div class="invoice-box client-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
      <%= form_tag "clients/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>
          <div class="search_result_container">
              <% @clients.group_by { |d| d.group_date }.each do |date, clients| %>
                  <p><span class="activity-date"><%= date %></span></p>
                  <div class="flex-wrapper">
                    <%= render partial: 'client_card', collection: clients, as: :client %>
                  </div>
              <% end %>
          </div>
          <%= render partial: 'bulk_actions'%>

      <% end %>

  </div>

</div>