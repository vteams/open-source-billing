$('tbody#task_body').html('<%= escape_javascript render 'tasks' %>');
$('tfoot#paging_links').html('<%= escape_javascript render('application_partials/paging') %>');
$('#active_links').html('<%= escape_javascript render('filter_links') %>');
<% @recovered = params[:archived] ? 'archived' : 'deleted' %>
$(".alert.alert-success").show().find('span').html("Tasks are recovered from <%= @recovered %> successfully.");
$('#active_links a').removeClass('active');
$('.get_actives').addClass('active');
$('.recover_deleted, .recover_archived').hide();
$('.archive').show();
