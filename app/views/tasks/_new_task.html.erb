<div class="tiny_form_container">

  <div id="create_client" class="tiny_create_form">
    <div class="tiny_form_inner">

      <div class="tiny_form_top">
        <div class="tiny_form_heading"><h4><%= t('views.tasks.add_new_task') %></h4></div>
        <div class="close_btn"><%= link_to 'x', 'javascript:' %></div>
      </div>
      <!--tiny_form_top-->

      <div class="tiny_form_middle">

        <div class="fields_content_data">

          <div class="field_row">
            <div class="label_field left"><span><%= t('views.tasks.name') %></span></div>
            <div class="small_field">
              <%= text_field_tag "task[name]", '', :required => 'required', "data-unique" => "", class: 'form-control' %>
            </div>
          </div>
          <!--field_row-->

          <div class="field_row">
            <div class="label_field left single"><%= t('views.tasks.description') %></div>
            <div class="small_field">
              <%= text_field_tag "task[description]", '', class: 'form-control' %>
            </div>
          </div>
          <!--field_row-->

          <div class="field_row">
            <div class="label_field left single"><%= t('views.tasks.rate') %></div>
            <div class="small_field">
              <%= number_field_tag "task[rate]", 0.0, min: 0, :class => 'project_task_rate form-control' %>
              <%= hidden_field_tag :quick_create %>
            </div>
          </div>
          <!--field_row-->

          <div id="clientModal" class="client-modal">
            <div class="cross_btn">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                <%= image_tag "cross.png", :size => "7x7", :alt => "" %>
              </button>
            </div>
          </div>
        </div>
        <!--fields_content_data-->
      </div>
      <!--tiny_form_middle-->

      <div class="tiny_form_btm">
        <%= button_tag "save", :name => "save", :class => "btn_large tiny_btn btn_save", :style => "width:40px;" %>
        <%= button_tag "save & Add More", :name => "add_more", :class => "btn_large tiny_btn btn_save_and_add_more" %>
      </div>
      <!--tiny_form_btm-->

    </div>
    <!--tiny_form_inner-->
  </div>
  <!--tiny_create_form-->
</div><!--tiny_form_container-->
