<div id="invoice_number_formatModal" class="modal editableModal templateModal">
  <div class="modal-content">
    <div class="modal-header clearfix text-content">
      <div class="modal-action-btn right">
        <a href="#" onclick="$('.submit_invoice_item_format').click();" class="icon-done" title="<%= t('views.common.save') %>">
          <i class="material-icons">done</i>
        </a>
        <a href="javascript:void(0);" title="<%= t('views.common.cancel') %>" class="modal-action modal-close waves-effect">
          <i class="material-icons close">close</i>
        </a>
      </div>
      <h5 class="left">
        Invoice Line Item Format
      </h5>
    </div>
    <%= simple_form_for :settings, url: settings_path, remote: true do |f| %>
      <div class="modal-body">
        <div class="row">
          <%= f.input :invoice_item_format, input_html: {name: 'invoice_item_format', id: 'invoice_number_format', value: Settings.invoice_item_format.present? ? Settings.invoice_item_format : '{{item_description}}'  }, label: t('Invoice Number Format'),
                      wrapper_html: { class: 'input-field col s12' }, label_html: { class: 'active' }%>

          <%= f.submit '', class:  'btn_large submit_invoice_item_format hidden' %>
        </div>
        <div class="row invoice-number-format-row">
          <div class="col s12">
            <nav class="templatsidebar">
              <h5><%= t('views.email_templates.custom_fields') %>:</h5>
              <ul class="invoice-format-custom-fields">
                <% CUSTOM_FIELDS['Invoice Line Item Format'].each do |cf|%>
                  <li>
                    <strong><%= cf[:label] %> </strong>
                    <span><%= cf[:token] %> </span>
                  </li>
                <% end %>
              </ul>
            </nav>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>