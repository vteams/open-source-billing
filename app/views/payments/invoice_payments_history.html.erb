<%- model_class = Payment -%>
<div class="content_top">
  <div class="primary_heading">
    <h1>Payments History</h1>
  </div>
  <div class="primary_btn">
    <%= link_to t('views.payments.back_to_invoice'), invoice_path(@invoice), :class => "btn_large" %>
    <!--<a class="btn_large big" href="#">Back to invoice</a>-->
  </div>
</div><!--content_top-->

<div class="payment_history">
  <div class="content_middle">
    <div class="grid_table">
      <table cellpadding="0" cellspacing="0" class="table table_listing payment_listing">
        <colgroup>
          <col class="one"/>
          <col class="two"/>
          <col class="three"/>
          <col class="four"/>
          <col class="five"/>
          <col class="six"/>
        </colgroup>
        <thead>
          <tr>
            <th class="align_center"><%= t('invoice') %></th>
            <th class="align_left"><%= t('client') %></th>
            <th class="align_center"><%= t('views.common.type') %></th>
            <th class="align_center"><%= t('views.common.notes') %></th>
            <th class="align_center"><%= t('views.common.date') %></th>
            <th class="align_right {sorter:'thousands'}" style="padding-right: 20px;"><%= t('views.dashboard.amount') %></th>
          </tr>
        </thead>
        <tbody id="payment_body">
          <%= render 'payments_history' %>
        <tfoot id="paging_links">
          <%= render "application_partials/paging" %>
        </tfoot>
        </tbody>
      </table>
    </div><!--grid_table-->
  </div><!--content_middle-->
</div><!--payment_history-->