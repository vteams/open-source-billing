<%= render 'estimate_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item  breadcrum-bar">
      <div class="card-white-panel ">
        <h3>
          Estimates
          <%= link_to "/ #{@status.humanize}",estimates_url(status: @status) %>
        </h3>
      </div>
    </div>
  </div>

  <div class="invoice-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
      <%= form_tag "estimates/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>
          <div class="search_result_container">
            <% @estimates.group_by { |d| d.group_date }.each do |date, estimates| %>
                <p><span class="activity-date"><%= date %></span></p>
                <div class="flex-wrapper">
                  <%= render partial: 'estimate_card', collection: estimates, as: :estimate %>
                </div>
            <% end %>
          </div>

          <%= render partial: 'bulk_actions'%>

      <% end %>

  </div>
</div>
