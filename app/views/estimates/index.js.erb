$('thead#estimate_head').html('<%= escape_javascript render("estimate_header") %>')
$('tbody#estimate_body').html('<%= escape_javascript render("estimate") %>');

$('tfoot#paging_links').html('<%= escape_javascript render("application_partials/paging") %>');

$('#sort_direction').html('<%= params[:direction]%>');
// Add page params in table listing headers
<% status = params[:status]%>
$('.top_links').hide();
$('#active_links a').removeClass('active');
$('.primary_heading h1 span').html("&nbsp;/&nbsp;<%= status.capitalize%>");
<%if status == "active" %>
$('.archive,.destroy,.payment,.send, .convert_to_invoice').show();
$('#active_links a.get_actives').addClass('active');
$('.send').parent("li").addClass("grid_control_sep");
$('.destroy').parent("li").addClass("grid_control_sep");
<% elsif status == "archived"%>
$('.recover_archived,.destroy_archived,.send, .convert_to_invoice').show();
$('#active_links a.get_archived').addClass('active');
$('.send').parent("li").addClass("grid_control_sep");
<% elsif status == "deleted"%>
$('.recover_deleted').show().parent('li').removeAttr('class');
$('#active_links a.get_deleted').addClass('active');
<% elsif status == "invoiced"%>
$('.get_invoiced').show().parent('li').removeAttr('class');
$('#active_links a.get_invoiced').addClass('active');
$('.destroy').show();
$('.destroy').parent("li").removeClass("grid_control_sep");
<%end%>
