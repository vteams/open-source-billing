$('.alert').hide();
$('#active_links').html('<%= escape_javascript render("filter_links") %>');
$('#invoices_with_payments').modal('hide')
<%if !params[:invoice_ids].blank? %>
$(".alert.alert-success").show().find('span').html("<%= escape_javascript @message %>");
$('tbody#invoice_body').html('<%= escape_javascript render("invoice") %>');
$('tfoot#paging_links').html('<%= escape_javascript render("application_partials/paging") %>');
setTimeout(function(){
    $(".invoice_listing .text-overflow-class").ellipsis({row:1});
},100);

<%end%>
$('.top_links').hide();
$('#active_links a').removeClass('active');
<% if params[:action_to_perform].present? and params[:action_to_perform] == 'destroy_archived' %>
    $('.send').parent("li").removeClass("grid_control_sep");
    $('.recover_archived,.destroy_archived,.send').show();
    $('#active_links a.get_archived').addClass('active');
<% else %>
    $('.archive,.destroy,.payment,.send').show();
    $('#active_links a.get_actives').addClass('active');
<% end  %>
bind_deleted_entry();